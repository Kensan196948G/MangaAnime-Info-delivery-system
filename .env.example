# MangaAnime情報配信システム - 環境変数設定例
# 本番環境では .env ファイルを作成してこの内容をコピーし、適切な値に変更してください

# Flask環境設定
FLASK_ENV=production
FLASK_APP=app.web_app:app
SECRET_KEY=<CHANGE_ME_32文字以上のランダム文字列>

# データベース設定
USE_DB_STORE=true
USE_DB_AUDIT_LOG=true

# 認証設定
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=<CHANGE_ME_強力なパスワード>

# Redis設定（セッション・レート制限）
REDIS_URL=redis://localhost:6379
SESSION_TYPE=redis

# セキュリティ設定
SESSION_COOKIE_SECURE=true
CSRF_ENABLED=true

# レート制限設定
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_LOCKOUT_MINUTES=30
BRUTE_FORCE_WINDOW_MINUTES=15

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Google API設定（オプション）
GOOGLE_CLIENT_ID=<YOUR_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_CLIENT_SECRET>
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# メール設定（オプション）
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_EMAIL>
SMTP_PASSWORD=<YOUR_APP_PASSWORD>

# その他
TIMEZONE=Asia/Tokyo
