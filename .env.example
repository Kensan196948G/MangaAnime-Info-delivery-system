# アニメ・マンガ情報配信システム環境変数設定
# このファイルを .env にコピーして使用してください

# システム設定
MANGA_ANIME_ENVIRONMENT=production
MANGA_ANIME_LOG_LEVEL=INFO
MANGA_ANIME_LOG_PATH=./logs/app.log

# データベース設定
MANGA_ANIME_DB_PATH=./db.sqlite3

# Gmail API設定（OAuth2）
MANGA_ANIME_GMAIL_FROM=your-email@gmail.com
MANGA_ANIME_GMAIL_TO=your-notification-email@gmail.com
GMAIL_CLIENT_ID=your-gmail-client-id.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Gmail App Password（OAuth2の代替）
GMAIL_APP_PASSWORD=your-16-character-app-password

# Google Calendar API設定
MANGA_ANIME_CALENDAR_ID=primary
CALENDAR_CLIENT_ID=your-calendar-client-id.googleusercontent.com
CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# Google API認証ファイル
MANGA_ANIME_CREDENTIALS_FILE=credentials.json
MANGA_ANIME_TOKEN_FILE=token.json
GOOGLE_APPLICATION_CREDENTIALS=service-account.json

# 外部API設定
ANILIST_API_KEY=your-anilist-api-key
SYOBOI_API_KEY=your-syoboi-api-key

# セキュリティ設定
MANGA_ANIME_SECRET_KEY=your-secret-key-for-security
MANGA_ANIME_ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
MANGA_ANIME_MASTER_PASSWORD=your-master-password-for-encryption
MANGA_ANIME_SALT=your-custom-salt-for-key-derivation

# レート制限設定
MANGA_ANIME_RATE_LIMIT_RPM=90
MANGA_ANIME_RETRY_DELAY=5

# 通知設定
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_CALENDAR_ENABLED=true

# デバッグ設定
DEBUG_MODE=false
VERBOSE_LOGGING=false

# SSL/TLS設定
SSL_VERIFY=true
FORCE_HTTPS=true

# セキュリティヘッダー
SECURE_HEADERS_ENABLED=true

# セッション設定
SESSION_TIMEOUT_MINUTES=60
SESSION_SECURE_COOKIES=true

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30