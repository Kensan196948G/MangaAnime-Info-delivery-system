# MangaAnime Info Delivery System - 環境変数設定例
# このファイルを .env にコピーして使用してください
# cp config.env.example .env

# ============================================================
# Google API 認証情報
# ============================================================

# Gmail API 認証情報ファイルのパス
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# Google Calendar API 認証情報ファイルのパス
CALENDAR_CREDENTIALS_PATH=calendar_credentials.json
CALENDAR_TOKEN_PATH=calendar_token.json

# ============================================================
# 通知設定
# ============================================================

# 通知先メールアドレス（カンマ区切りで複数指定可能）
NOTIFICATION_EMAIL=user@example.com

# 通知送信元メールアドレス（Gmail）
NOTIFICATION_FROM=noreply@example.com

# ============================================================
# データベース設定
# ============================================================

# SQLiteデータベースファイルのパス
DATABASE_PATH=db.sqlite3

# データベースバックアップディレクトリ
DATABASE_BACKUP_DIR=backups/

# ============================================================
# ログ設定
# ============================================================

# ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ログファイルのパス
LOG_FILE=logs/app.log

# ログの最大サイズ（バイト）
LOG_MAX_BYTES=10485760

# ログのバックアップ数
LOG_BACKUP_COUNT=5

# ============================================================
# API設定
# ============================================================

# AniList API
ANILIST_API_URL=https://graphql.anilist.co
ANILIST_RATE_LIMIT_CALLS=90
ANILIST_RATE_LIMIT_PERIOD=60

# しょぼいカレンダー API
SYOBOI_API_URL=https://cal.syoboi.jp/db.php
SYOBOI_RATE_LIMIT_CALLS=1
SYOBOI_RATE_LIMIT_PERIOD=1

# ============================================================
# キャッシュ設定
# ============================================================

# キャッシュディレクトリ
CACHE_DIR=.cache

# キャッシュの有効期限（秒）
CACHE_TTL=3600

# ============================================================
# スケジュール設定
# ============================================================

# 実行時刻（24時間形式）
SCHEDULE_RUN_TIME=08:00

# タイムゾーン
TIMEZONE=Asia/Tokyo

# ============================================================
# フィルタ設定
# ============================================================

# NGキーワード（カンマ区切り）
NG_KEYWORDS=エロ,R18,成人向け,BL,百合,ボーイズラブ

# ============================================================
# Web UI 設定
# ============================================================

# Flaskの実行モード (development, production)
FLASK_ENV=development

# Flaskのデバッグモード (True, False)
FLASK_DEBUG=True

# Webサーバーのホスト
WEB_HOST=0.0.0.0

# Webサーバーのポート
WEB_PORT=5000

# セッションの秘密鍵（ランダムな文字列を設定）
SECRET_KEY=your-secret-key-here-change-this-in-production

# ============================================================
# セキュリティ設定
# ============================================================

# HTTPS強制 (True, False)
FORCE_HTTPS=False

# CORS許可オリジン（カンマ区切り、開発環境のみ）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================
# メトリクス・モニタリング
# ============================================================

# メトリクス収集の有効化 (True, False)
METRICS_ENABLED=True

# メトリクスファイルのパス
METRICS_FILE=metrics.json

# ヘルスチェックエンドポイントの有効化 (True, False)
HEALTH_CHECK_ENABLED=True

# ============================================================
# 開発環境専用設定
# ============================================================

# テストモード (True, False) - 実際にメール送信・カレンダー登録しない
TEST_MODE=False

# ダミーデータ生成 (True, False)
GENERATE_DUMMY_DATA=False

# ============================================================
# プロダクション環境専用設定
# ============================================================

# エラー通知先メールアドレス
ERROR_NOTIFICATION_EMAIL=admin@example.com

# Sentryエラートラッキング DSN（使用する場合）
# SENTRY_DSN=https://xxxx@sentry.io/xxxxx

# ============================================================
# 外部サービス連携
# ============================================================

# Slack Webhook URL（通知用、使用する場合）
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Discord Webhook URL（通知用、使用する場合）
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# ============================================================
# バックアップ設定
# ============================================================

# 自動バックアップの有効化 (True, False)
AUTO_BACKUP_ENABLED=True

# バックアップの保持期間（日）
BACKUP_RETENTION_DAYS=30

# バックアップ実行時刻
BACKUP_TIME=02:00

# ============================================================
# パフォーマンス設定
# ============================================================

# ワーカープロセス数（並列実行）
WORKERS=4

# タイムアウト設定（秒）
REQUEST_TIMEOUT=10

# 接続プールサイズ
CONNECTION_POOL_SIZE=10
