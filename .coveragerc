# Coverage Configuration
# =====================

[run]
source =
    app
    modules
    scripts

omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */site-packages/*
    */.venv/*
    setup.py
    */migrations/*

branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover

exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods:
    @abstract
    @abstractmethod

    # Don't complain about ellipsis in protocol classes:
    \.\.\.

    # Don't complain about pass statements:
    pass

[html]
directory = htmlcov
title = MangaAnime Info Delivery System - Coverage Report

[json]
output = coverage.json
pretty_print = True

[xml]
output = coverage.xml
