{
  "name": "mangaanime-e2e-tests",
  "version": "1.0.0",
  "description": "E2E test suite for MangaAnime Info Delivery System",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:api": "playwright test specs/api.spec.ts",
    "test:parallel": "playwright test --workers=4",
    "test:single": "playwright test --workers=1",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:5000",
    "trace": "playwright show-trace",
    "install": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation"
  ],
  "author": "MangaAnime Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^17.3.1"
  }
}
