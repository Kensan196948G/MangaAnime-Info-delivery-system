# アニメ・マンガ情報配信システム 環境変数テンプレート
# このファイルを .env にコピーして実際の値を設定してください

# ===== システム設定 =====
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEZONE=Asia/Tokyo

# ===== データベース設定 =====
DATABASE_PATH=./db.sqlite3
BACKUP_ENABLED=true

# ===== Google API認証情報 =====
# Google Cloud Consoleで取得したクライアントID/シークレット
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here

# 認証ファイルのパス
GOOGLE_CREDENTIALS_FILE=./credentials.json
GOOGLE_TOKEN_FILE=./token.json

# ===== Gmail設定 =====
GMAIL_FROM_EMAIL=your-email@gmail.com
GMAIL_TO_EMAIL=your-email@gmail.com
GMAIL_SUBJECT_PREFIX=[アニメ・マンガ情報]

# ===== Google Calendar設定 =====
GOOGLE_CALENDAR_ID=primary
CALENDAR_EVENT_DURATION_HOURS=1

# ===== External API設定 =====
# AniList GraphQL API（認証不要、レート制限あり）
ANILIST_GRAPHQL_URL=https://graphql.anilist.co
ANILIST_RATE_LIMIT_PER_MIN=90

# しょぼいカレンダーAPI
SYOBOI_BASE_URL=https://cal.syoboi.jp

# ===== User Agent設定 =====
USER_AGENT=MangaAnimeNotifier/1.0 (https://github.com/your-username/manga-anime-notifier)

# ===== スケジューリング設定 =====
DEFAULT_RUN_TIME=08:00
MAX_EXECUTION_TIME_MINUTES=30
RETRY_ATTEMPTS=3

# ===== ログ設定 =====
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ===== 開発用設定 =====
DEBUG=false
TEST_MODE=false

# テスト用メールアドレス（本番以外で使用）
TEST_EMAIL=test@example.com

# ===== セキュリティ設定 =====
# OAuth2トークンの暗号化キー（32バイトのランダム文字列）
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# API呼び出しタイムアウト（秒）
API_TIMEOUT_SECONDS=30
RSS_TIMEOUT_SECONDS=20

# ===== フィルタリング設定 =====
# 追加のNGキーワード（カンマ区切り）
ADDITIONAL_NG_KEYWORDS=

# 最小評価スコア（0.0-10.0）
MIN_SCORE_THRESHOLD=6.0