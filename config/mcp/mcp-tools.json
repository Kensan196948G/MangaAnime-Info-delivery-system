  "tools": {
    "read-file": {
      "category": "file-operations",
      "description": "Read file contents",
      "parameters": ["path", "encoding"],
      "async": true
    },
    "ast-parse": {
      "category": "code-analysis",
      "description": "Parse code into AST",
      "parameters": ["code", "language"],
      "async": true
    },
    "model-inference": {
      "category": "ai-ml",
      "description": "Run AI model inference",
      "parameters": ["model", "input", "options"],
      "async": true
    },
    "http-request": {
      "category": "network",
      "description": "Make HTTP request",
      "parameters": ["url", "method", "headers", "body"],
      "async": true
    },
    "query-execute": {
      "category": "database",
      "description": "Execute database query",
      "parameters": ["connection", "query", "parameters"],
      "async": true
    }
  },
  "configuration": {
    "autoLoad": true,
    "lazyInit": true,
    "caching": true,
    "retryPolicy": {
      "maxRetries": 3,
      "backoff": "exponential"
    },
    "timeout": {
      "default": 30000,
      "byCategory": {
        "ai-ml": 300000,
        "database": 60000,
        "network": 45000
      }
    }
  },
  "middleware": [
    {
      "name": "auth",
      "enabled": true,
      "order": 1
    },
    {
      "name": "rate-limit",
      "enabled": true,
